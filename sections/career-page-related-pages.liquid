<style>
  .job_available {
    text-decoration: none;
    color: black;
    margin: 8px;
  }
  .job_available: hover {
    color:blue
  }
.aside {
  background: #F3F2F1;
  box-shadow: 0px 4px 4px rgb(0 0 0 / 25%);
  border-radius: 15px;
  padding: 12px;
  color: #ffffff;
  text-align: center;
  font-size: 14px;
}
</style>



  {% assign relatedPages = page.metafields.career.related_pages %}
  {% if relatedPages != null %}
    <div class="aside">
    <p class="text-columns">You may also like...</p>
    {% for relatedPage in relatedPages.value %}
      <div><a class="job_available" href="/pages/{{ relatedPage | replace: ' ', '-'}}" >{{ relatedPage }}</a></div>   
    {% endfor %}
    </div>
  {% endif %}    
