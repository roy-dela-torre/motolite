

<section class="banner global-padding" id="dynamic-banner">
  <div class="wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="content">
          {% if section.settings.title %}
            <h1 class="text-center text-white text-uppercase">
              {{ section.settings.title }}
            </h1>
          {% endif %}
          
          {% if section.settings.description %}
            <p class="text-center text-white mb-0">
              {{ section.settings.description }}
            </p>
          {% endif %}
          
          {% if section.settings.button_text and section.settings.button_url %}
            <div class="text-center mt-4">
              <a href="{{ section.settings.button_url }}" class="btn btn-primary">
                {{ section.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Dynamic Content Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Fast, Reliable Car Battery & Installation!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "When your car battery fails, you need an immediate and trusted solution. We offer prompt delivery and installation of high-quality car batteries, ensuring you're back on the road in no time."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#D5232B"
    }
  ],
  "presets": [
    {
      "name": "Dynamic Content Banner",
      "category": "Custom Sections",
      "settings": {
        "title": "Fast, Reliable Car Battery & Installation in Pampanga!",
        "description": "When your car battery fails, you need an immediate and trusted solution. Motolite Express Hatid in Pampanga offers prompt delivery and installation of high-quality car batteries, ensuring you're back on the road in no time. With 24/7 availability, you can count on us anytime, anywhere, for all your car battery needs in Pampanga."
      }
    }
  ]
}
{% endschema %}